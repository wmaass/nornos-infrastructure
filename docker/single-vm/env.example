# Nornos Production Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# DOMAIN & SSL
# ============================================
# Your domain (subdomains will be: patient., doctor., api., etc.)
DOMAIN=nornos.example.com

# Email for Let's Encrypt SSL certificates
ACME_EMAIL=admin@example.com

# ============================================
# DATABASE
# ============================================
POSTGRES_DB=nornos
POSTGRES_USER=nornos
# Generate with: openssl rand -base64 32
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# Generate with: openssl rand -base64 32
REDIS_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# ============================================
# SECURITY
# ============================================
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_SECURE_JWT_SECRET

# Traefik dashboard auth (optional)
# Generate with: htpasswd -nb admin yourpassword
TRAEFIK_AUTH=admin:$$apr1$$xyz...

# ============================================
# DOCKER REGISTRY
# ============================================
# Your GitHub username for ghcr.io
GITHUB_USER=wmaass

# Version tag to deploy
VERSION=latest

# ============================================
# AI/LLM SERVICES
# ============================================
# OpenAI API Key (for GPT models)
OPENAI_API_KEY=sk-...

# Anthropic API Key (for Claude models)
ANTHROPIC_API_KEY=sk-ant-...
